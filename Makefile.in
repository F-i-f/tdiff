# General program definitions
CC         = @CC@
RM_F       = rm -f
CP	   = cp

# VPATH & scrdir
srcdir     = @srcdir@
VPATH      = @srcdir@

# The default targets
TARGETS      = tdiff genhash_test

# Object definitions
OBJS_TDIFF   = tdiff.o genhash.o utils.o
OBJS_GHTEST  = genhash.o utils.o genhash_test.o

# Compiler options
CPPFLAGS     = @CPPFLAGS@ -I$(srcdir) -I.
CFLAGS       = @CFLAGS@
LIBS         = @LIBS@
LDFLAGS	     =
ALLCFLAGS    = $(CFLAGS) $(CPPFLAGS)

# Default rule
all: $(TARGETS)

# Generic rules
%.o: %.c
	$(CC) $(ALLCFLAGS) -o $@ -c $<

# Program targets
tdiff: $(OBJS_TDIFF)
	$(CC) $(LDFLAGS) -o $@ $^ $(LIBS)

genhash_test: $(OBJS_GHTEST)
	$(CC) $(LDFLAGS) -o $@ $^ $(LIBS)

# Cleaning
clean::
	$(RM_F) $(TARGETS) *~ *.o *.d

distclean realclean:: clean
	$(RM_F) Makefile config.h config.cache config.log config.status \
		config.h.stamp

maintclean:: realclean
	$(RM_F) configure

# Configure
${srcdir}/configure: configure.in
	cd ${srcdir} && autoconf

config.h: config.h.stamp
config.h.stamp: config.h.in config.status
	CONFIG_FILES= CONFIG_HEADERS=config.h ./config.status
	echo > config.h.stamp

Makefile: Makefile.in config.status
	CONFIG_FILES=Makefile CONFIG_HEADERS= ./config.status

config.status: configure
	./config.status --recheck


# Administratrivia
.PHONY: all clean realclean maintclean

include /dev/null $(wildcard *.d)
