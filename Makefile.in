# General program definitions
CC         = @CC@
LD	   = $(CC)
RM_F       = rm -f
CP	   = cp
AR	   = ar
RANLIB     = @RANLIB@

# VPATH & scrdir
srcdir     = @srcdir@
VPATH      = @srcdir@

# The default targets
TARGETS      = tdiff inocache_test @GENHASH_TEST_TARGET@

# Object definitions
OBJS         = genhash.o utils.o inocache.o

# Compiler options
CPPFLAGS     = @CPPFLAGS@ -I$(srcdir) -I.
CFLAGS       = @CFLAGS@
LIBS         = @LIBS@
LDFLAGS	     =
ALLCFLAGS    = $(CFLAGS) $(CPPFLAGS)

# Default rule
all: $(TARGETS)

# Generic rules
%.o: %.c
	$(CC) $(ALLCFLAGS) -o $@ -c $<

# Library target
libtdiff.a: $(OBJS)
	$(AR) rc $@ $?
	$(RANLIB) $@

# Program targets
$(TARGETS): %: %.o libtdiff.a
	$(LD) $(LDFLAGS) -o $@ $< -L. -ltdiff $(LIBS) 

# Cleaning
clean::
	$(RM_F) $(TARGETS) *~ *.o *.d *.a

distclean realclean:: clean
	$(RM_F) Makefile config.h config.cache config.log config.status \
		config.h.stamp

maintclean:: realclean
	$(RM_F) configure

# Configure
${srcdir}/configure: configure.in
	cd ${srcdir} && autoconf

config.h: config.h.stamp
config.h.stamp: config.h.in config.status
	CONFIG_FILES= CONFIG_HEADERS=config.h ./config.status
	echo > config.h.stamp

Makefile: Makefile.in config.status
	CONFIG_FILES=Makefile CONFIG_HEADERS= ./config.status

config.status: configure
	./config.status --recheck


# Administratrivia
.PHONY: all clean realclean maintclean /dev/null
.SUFFIXES:

include /dev/null $(wildcard *.d)
