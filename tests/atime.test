#!/bin/sh

set -eu

setup() {
  echo "File 1" > "$1"/file1
  echo "File 2" > "$1"/file2
  mkdir "$1"/dir1
  echo "File 3" > "$1"/dir1/file3

  cp -pr "$1"/* "$2"/

  touch -r "$1"/file2 "$2"/file2
  touch -r "$1"/dir1 "$2"/dir1
  touch -r "$1" "$2"

  touch -t 198001010000 "$1"/file1 "$2"/dir1/file3
}

atime_filter() {
  sed -e 's!\(: atime:\) \[[^]][^]]*\] \[[^]][^]]*\]$!\1 [XXX] [XXX]!'
}

tdiff_options="-Ar"
filter=atime_filter

. "$srcdir"/tests/test.lib
