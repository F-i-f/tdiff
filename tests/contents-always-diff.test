#!/bin/sh

set -eu

. "$srcdir"/tests/contents.lib.sh

always_diff_filter() {
  sed -e 's!^\(\([-+]\)\2\2 [^[:space:]][^[:space:]]*\)[[:space:]][[:space:]]*[0-9A-Z].*$!\1!' \
      -e 's!^@@ .* @@$!@@ X @@!' \
      -e '/^No differences encountered$/d'
}

tdiff_options="-AW"
tdiff_long_options="--no-all --exec-always-diff"
filter=always_diff_filter

. "$srcdir"/tests/test.lib.sh
