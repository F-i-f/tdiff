#!/bin/sh

set -eu

setup() {
  echo "File 1" > "$1"/file1
  echo "File 2" > "$1"/file2
  echo "File 3" > "$1"/file3
  mkdir "$1"/dir1

  sleep 1

  cp -pr "$1"/* "$2"/
  rm "$2"/file1
  mkdir "$2"/file1
}

ctime_filter() {
  sed -e 's!\(: ctime:\) \[[^]][^]]*\] \[[^]][^]]*\]$!\1 [XXX] [XXX]!'
}

tdiff_options="-0z"
tdiff_long_options="--preset none --ctime"
filter=ctime_filter

. "$srcdir"/tests/test.lib.sh
